<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
         
        
        
        <item name="android:tabWidgetStyle">@style/LightTabWidget</item>
		<item name="android:actionBarStyle">@style/YellowActionBar</item>
    </style>
	
	<style name="YellowActionBar" parent="android:style/Widget.ActionBar">
		<item name ="android:background">#fff</item>
	</style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="LightTabWidget" parent="@android:style/Widget.TabWidget">
	    <!-- set textColor to red, so you can verify that it applied. -->
	   <item name="android:textColor">#fff</item>
	   <item name="android:capitalize">characters</item>
	   <item name="android:textSize">9pt</item>
	</style>
	<style name="AppBaseThemeLight" parent="android:style/Widget.TabWidget">
        <!-- API 14 theme customizations can go here. -->
		<item name="android:textColor">#000</item>

    </style>
</resources>
