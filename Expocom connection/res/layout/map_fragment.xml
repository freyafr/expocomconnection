<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/AppBaseThemeLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/firststage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <com.sitronics.expocomconnection.ResizableImageView
                    android:id="@+id/firststage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="1 этаж"
                    android:scaleType="centerCrop"
                    android:src="@drawable/minimap1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/firststage"
                    android:layout_alignRight="@+id/firststage"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="1 этаж"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondstage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingTop="5dp" >

                <com.sitronics.expocomconnection.ResizableImageView
                    android:id="@+id/secondstage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="2 этаж"
                    android:scaleType="centerCrop"
                    android:src="@drawable/minimap2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/secondstage"
                    android:layout_alignRight="@+id/secondstage"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="2 этаж"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>